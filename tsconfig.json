{
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["es2021"],
    "experimentalDecorators": true,
    "noUncheckedIndexedAccess": true,
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "paths": {
      "@/src/*": ["src/*"],
      "@/tests/*": ["tests/*"]
    }
  }
}
